# Use the official .NET SDK image as the base image
FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build

# Set the working directory inside the container
WORKDIR /app

# Copy the project files to the container's working directory
COPY *.csproj ./

# Restore the NuGet packages
RUN dotnet restore

# Copy the remaining source code to the container's working directory
COPY . ./

# Build the application
RUN dotnet publish -c Release -o out

# Create a new image using the runtime image (smaller footprint)
FROM mcr.microsoft.com/dotnet/aspnet:5.0 AS runtime

# Set the working directory inside the container
WORKDIR /app

# Copy the published output from the build stage to the current stage
COPY --from=build /app/out .

# Expose the port that the application listens on
EXPOSE 7280

# Command to run the application when the container starts
ENTRYPOINT ["dotnet", "Server.dll"]
